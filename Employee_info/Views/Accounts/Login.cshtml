@model Employee_info.Models.DTO.LoginDTO

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Accounts.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-6 offset-3 pl-5 pr-5 pb-5">
        </div>
        <div class="text-center">
            <a class="text-light btn btn-primary font-weight-bold" asp-action="Register" asp-contoller="Accounts">Sign In </a>
        </div>
        <div class="col-md-4 offset-4">
            <h6 class="text-danger text-center" style="color:red">@TempData["errorMessage"]</h6>
            <form method="post" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input type="text" asp-for="UserName" placeholder="User Name" class="form-control" autocomplete="off" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input type="password" asp-for="Password" placeholder="Password" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mb-2" />
                </div>
            </form>
        </div>
        <div>


            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }

</div>
   